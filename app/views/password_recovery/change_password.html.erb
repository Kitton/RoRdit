<% content_for :title, "Change Password" %>

<%= javascript_include_tag "change_password" %>

<div class="section-form">
  <h1>Change Password</h1>
  <form action="" v-on:submit.prevent="changePassword()" accept-charset="UTF-8" method="post">
    <table class="form-table">
      <tr>
        <td><span>Email:</span></td>
        <td><input type="email" v-model="email" :class="validateEmail"></td>
      </tr>
      <tr>
        <td> </td>
        <td class="warning-td">
          <span :class="validateEmail" class="warning-span">Please enter valid email.</span>
        </td>
      </tr>
      <tr>
        <td><span>Token:</span></td>
        <td><input type="password" v-model="recoveryToken" :class="validateToken"></td>
      </tr>
      <tr>
        <td> </td>
        <td class="warning-td">
          <span :class="validateToken" class="warning-span">Minimum length is 6</span>
        </td>
      </tr>
      <tr>
        <td><span>New Password:</span></td>
        <td><input type="password" v-model="password" :class="validatePassword"></td>
      </tr>
      <tr>
        <td> </td>
        <td class="warning-td">
          <span :class="validatePassword" class="warning-span">Minimum length is 5</span>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><button type="submit" :class="validateChangeSubmit">Change</button></td>
      </tr>
    </table>
  </form>
</div>